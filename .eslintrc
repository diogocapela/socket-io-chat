{
  "root": true,
  "extends": [
      "react-app",
      "airbnb-base"
  ],
  "rules": {
      "indent": 0,
      "max-len": [ "error", 200, 2, {
              "ignoreUrls": true,
              "ignoreComments": false,
              "ignoreRegExpLiterals": true,
              "ignoreStrings": false,
              "ignoreTemplateLiterals": false
          }
      ],
      "object-curly-newline": 0,
      "import/no-unresolved": 0,
      "no-plusplus": 0
  },
  "settings": {
      "react": {
          "version": "16.8.4"
      }
  }
}